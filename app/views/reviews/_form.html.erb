<p class="is-size-4 mb-3" style="color: white">レビューを書く </p>
<div class="rating-box mt-3">
  <%= form_with model: review, url: recipe_reviews_path(recipe), local:true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3"style="color: yellow">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display" style="color: white" >
        <span id="rating-value-display">/5</span>
      </div>
    </div>
    <%= f.hidden_field :recipe_id, value: recipe.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
    <%= link_to "他のレビュー", recipe_reviews_path(recipe), class:"button light ml-3 mt-3" %>
  <% end %>
</div>